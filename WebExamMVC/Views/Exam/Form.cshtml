@model WebExamMVC.ViewModels.ExamViewModel
@if(Model.Id == 0)
{
    <h1>Create Exam</h1>
}
else
{
    <h1>Edit Exam</h1>
}

<form asp-action="Insert" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="ExamStart" class="control-label">Exam Start</label>
        <input asp-for="ExamStart" class="form-control" />
        <span asp-validation-for="ExamStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ExamDuration" class="control-label">Exam Duration</label>
        <input asp-for="ExamDuration" class="form-control" />
        <span asp-validation-for="ExamDuration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SubjectId" class="control-label">Subject</label>
        <select asp-for="SubjectId" class="form-control">
            @foreach (var subject in Model.Subjects)
            {
                <option value="@subject.Id">@subject.Name</option>
            }
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

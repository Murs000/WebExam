@model WebExamMVC.Models.ExamModel

<h1>Delete Exam</h1>

<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Exam</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Id
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                Exam Start
            </dt>
            <dd class="col-sm-10">
                @Model.ExamStart
            </dd>
            <dt class="col-sm-2">
                Exam End
            </dt>
            <dd class="col-sm-10">
                @Model.ExamEnd
            </dd>
            <dt class="col-sm-2">
                Subject
            </dt>
            <dd class="col-sm-10">
                @Model.Subject.Name
            </dd>
        </dl>

        <a asp-action="DeleteConfirmed" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

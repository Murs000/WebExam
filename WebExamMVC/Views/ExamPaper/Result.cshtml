@{
    ViewBag.Title = "Exam Result";
}

<div class="container mt-5">
    <div class="card text-center">
        <div class="card-header">
            <h2>Exam Result</h2>
        </div>
        <div class="card-body">
            <p class="card-text">Your score is: <span class="font-weight-bold">@ViewBag.Score</span></p>
            <a asp-action="Index" class="btn btn-secondary mt-3">Back to Exam</a>
        </div>
    </div>
</div>
